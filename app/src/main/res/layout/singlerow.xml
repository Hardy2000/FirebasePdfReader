<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:id="@+id/img1"
            android:src="@drawable/pdf_recycle_img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:hint="This is the Title"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/upvote"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/upvote_img"/>
                    <TextView
                        android:id="@+id/upvotecount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textSize="25sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/downvote"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/downvote_img"/>
                    <TextView
                        android:id="@+id/downvotecount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textSize="25sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/watch"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/watched_img"/>
                    <TextView
                        android:id="@+id/watchcount"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:textSize="25sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"/>






                </LinearLayout>





            </LinearLayout>







    </LinearLayout>

</androidx.cardview.widget.CardView>